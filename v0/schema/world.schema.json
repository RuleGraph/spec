{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rulegraph.org/schema/world.schema.json",
  "title": "RuleGraph World (v0)",
  "type": "object",
  "required": ["id", "type", "version", "frames", "entities", "dynamics"],
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "rg:World" },
    "version": { "type": "string" },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "metric", "units"],
        "properties": {
          "id": { "type": "string" },
          "type": { "const": "rg:InertialFrame" },
          "metric": { "enum": ["Euclidean"] },
          "units": {
            "type": "object",
            "required": ["length", "time", "mass"],
            "properties": {
              "length": { "type": "string" },
              "time": { "type": "string" },
              "mass": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "entities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "mass", "state"],
        "properties": {
          "id": { "type": "string" },
          "type": { "const": "rg:Body" },
          "mass": { "$ref": "#/$defs/Quantity" },
          "state": {
            "type": "object",
            "required": ["frame", "t", "position", "velocity"],
            "properties": {
              "frame": { "type": "string" },
              "t": { "type": "string" },
              "position": { "$ref": "#/$defs/Vec3Quantity" },
              "velocity": { "$ref": "#/$defs/Vec3Quantity" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "dynamics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["ref"],
        "properties": { "ref": { "type": "string" } },
        "additionalProperties": true
      }
    },
    "config": { "type": "object" },
    "provenance": { "type": "object" }
  },
  "$defs": {
    "Quantity": {
      "type": "object",
      "required": ["value", "unit"],
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string" },
        "sigma": { "type": "number" }
      },
      "additionalProperties": false
    },
    "Vec3Quantity": {
      "type": "object",
      "required": ["value", "unit"],
      "properties": {
        "value": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "unit": { "type": "string" },
        "sigma": { "type": "number" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
